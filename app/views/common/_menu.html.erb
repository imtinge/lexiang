<div class="ui stackable menu">
  <div class="ui container">
    <%= link_to '乐享户外拓展', root_path, class: 'header item' %>
    <%= link_to '拓展游戏库', root_path, class: 'active item' %>
    <div class="right menu">
      <% unless logged_in? %>
        <%= link_to '登录', login_path, class: 'item' %>
      <% else %>
        <% if current_user.admin? %>
          <%= link_to '游戏库管理', admin_games_path, class: 'item' %>
        <% end %>
        <div class="ui dropdown item">
          <i class="user icon"></i>
          <%= current_user.username %>
          <i class="dropdown icon"></i>
          <div class="menu">
            <%= link_to '退出', logout_path, class: 'item' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
