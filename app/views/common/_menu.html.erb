<div class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar-collapse-main" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to '乐享', root_path, class: 'navbar-brand' %>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse-main">
      <ul class="nav navbar-nav">
        <li class="active">
          <%= link_to root_path do %>
            游戏库
            <span class="sr-only">(current)</span>
          <% end %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% unless logged_in? %>
          <li>
            <%= link_to '登录', login_path %>
          </li>
        <% else %>
          <% if current_user.admin? %>
            <li>
              <%= link_to '游戏库管理', admin_games_path, class: 'item' %>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-user-circle" aria-hidden="true"></i>
              <%= current_user.username %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to '登出', logout_path %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
