<div class="pull-right">
  <%= link_to 'New Game', new_admin_game_path, class: 'btn btn-primary' %>
</div>
<h1>游戏库管理</h1>
<table class='table table-stripped table-hover'>
  <thead>
    <tr>
      <th>#</th>
      <th>名称</th>
      <th>标签</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each_with_index do |game, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= link_to game.title, admin_game_path(game) %></td>
        <td><%= render 'common/tag_line', tags: game.tag_list %></td>
        <td><%= link_to '编辑', edit_admin_game_path(game) %></td>
        <td><%= link_to '删除', admin_game_path(game), method: :delete, data: { confirm: '确认删除？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
