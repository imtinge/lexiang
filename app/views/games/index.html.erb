<div class="row">
  <div class="col-lg-3">
    <%= render 'common/tag_menu', tags: @tags %>
  </div>
  <div class="col-lg-9">
    <div class="row">
      <% @games.each do |game| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= link_to game_path(game) do %>
              <% if game.picture.present? %>
                <%= image_tag game.picture.thumb.url %>
              <% else %>
                <%= image_tag 'https://semantic-ui.com/images/wireframe/square-image.png' %>
              <% end %>
              <div class="caption">
                <%= link_to game.title, game_path(game), class: 'h4' %>
                <p>
                  <%= render 'common/tag_line', tags: game.tag_list %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
  </div>
</div>
